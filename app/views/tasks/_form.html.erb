<%= form_for @task, remote: true do |f| %>
 
  <div class="form-group">
    <%= f.text_field :description, placeholder: "Description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :deadline, id: "datetimepicker1", placeholder: "Due Date", class: "form-control" %>
  <div class="form-group">
    <%= f.submit "Task It", class: "btn btn-info" %>
  </div>
<% end %>
